<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RegisterElectricityScreen"
    android:background="@color/newCinza">

    <TextView
        android:id="@+id/txtCadastreConta"
        android:layout_width="347dp"
        android:layout_height="31dp"
        android:layout_marginTop="28dp"
        android:text="Cadastre suas contas."
        android:textAlignment="center"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="19dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.468"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btCadastrarConta"
        android:layout_width="171dp"
        android:layout_height="42dp"
        android:layout_marginTop="608dp"
        android:background="@drawable/shapebutton"
        android:backgroundTint="@color/colorPrimaryDark"
        android:fontFamily="sans-serif-smallcaps"
        android:text="Confirmar"
        android:textColor="@color/colorWhite"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.87"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btVoltarCad"
        android:layout_width="171dp"
        android:layout_height="42dp"
        android:layout_marginTop="608dp"
        android:background="@drawable/shapebutton"
        android:backgroundTint="@color/colorPrimaryDark"
        android:fontFamily="sans-serif-smallcaps"
        android:text="Voltar"
        android:textColor="@color/colorWhite"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.125"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/edtValorContaCad"
        android:layout_width="380dp"
        android:layout_height="36dp"
        android:layout_marginTop="72dp"
        android:background="@drawable/shapeedittxt"
        android:ems="10"
        android:hint=" R$ 200,00"
        android:inputType="numberDecimal"
        android:maxLength="10"
        android:paddingLeft="8dp"
        android:shadowColor="@color/fundo2"
        android:textColor="@color/colorBlack"
        android:textColorHint="@color/colorCinza"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.516"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/edtDate"
        android:layout_width="380dp"
        android:layout_height="36dp"
        android:layout_marginTop="120dp"
        android:background="@drawable/shapeedittxt"
        android:ems="10"
        android:hint=" dd/mm/aaaa"
        android:inputType="date"
        android:maxLength="10"
        android:paddingLeft="8dp"
        android:shadowColor="@color/fundo2"
        android:textColor="@color/colorBlack"
        android:textColorHint="@color/colorCinza"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.516"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <DatePicker
        android:id="@+id/datePicker"
        android:layout_width="350dp"
        android:layout_height="405dp"
        android:layout_marginTop="180dp"
        android:background="@color/colorWhite"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.491"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>